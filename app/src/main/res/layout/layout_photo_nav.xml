<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:orientation="horizontal"

    >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">



        <CheckBox
            android:id="@+id/btn_photo_nav_left"
            android:button="@null"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <!--<ImageView-->
            <!--android:id="@+id/photo_menu_love"-->
            <!--style="@style/IconTheme"-->
            <!--android:src="@mipmap/ic_love" />-->
    </LinearLayout>

    <FrameLayout

        android:id="@+id/photo_nav_wallpaper"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
       >
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/pb_progress"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

       <Button
           android:id="@+id/btn_photo_nav_between"
           android:background="@drawable/bg_wallpaper_btn"
           android:textColor="@android:color/white"
           android:textSize="@dimen/text_size_small"
           android:text="设置为壁纸"
           android:layout_width="match_parent"
           android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn_photo_nav_right"
            style="@style/ImageView"
            />
    </LinearLayout>


</LinearLayout>
